<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Environment-specific profiles -->
    <springProfile name="development">
        <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
        <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>
        
        <!-- Development Console Logging -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                    <stackTrace/>
                </providers>
            </encoder>
        </appender>
        
        <!-- Development File Logging -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/unza-counseling-dev.log</file>
            <append>true</append>
            <immediateFlush>true</immediateFlush>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                    <stackTrace/>
                </providers>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>logs/unza-counseling-dev.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>100MB</maxFileSize>
                <maxHistory>30</maxHistory>
                <totalSizeCap>3GB</totalSizeCap>
            </rollingPolicy>
        </appender>
    </springProfile>

    <springProfile name="production">
        <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
        
        <!-- Production Console Logging -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                </providers>
            </encoder>
        </appender>
        
        <!-- Production File Logging -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/unza-counseling.log</file>
            <append>true</append>
            <immediateFlush>true</immediateFlush>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                    <stackTrace/>
                </providers>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>logs/unza-counseling.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>500MB</maxFileSize>
                <maxHistory>90</maxHistory>
                <totalSizeCap>10GB</totalSizeCap>
            </rollingPolicy>
        </appender>

        <!-- Audit Log - Separate file for compliance -->
        <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/audit/unza-counseling-audit.log</file>
            <append>true</append>
            <immediateFlush>true</immediateFlush>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                </providers>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>logs/audit/unza-counseling-audit.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>200MB</maxFileSize>
                <maxHistory>2555</maxHistory> <!-- 7 years for compliance -->
                <totalSizeCap>50GB</totalSizeCap>
            </rollingPolicy>
        </appender>

        <!-- Security Events Log -->
        <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/security/unza-counseling-security.log</file>
            <append>true</append>
            <immediateFlush>true</immediateFlush>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                </providers>
            </encoder>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>logs/security/unza-counseling-security.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>200MB</maxFileSize>
                <maxHistory>2555</maxHistory> <!-- 7 years for compliance -->
                <totalSizeCap>50GB</totalSizeCap>
            </rollingPolicy>
        </appender>

        <!-- Error Log -->
        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/error/unza-counseling-error.log</file>
            <append>true</append>
            <immediateFlush>true</immediateFlush>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                    <stackTrace/>
                </providers>
            </encoder>
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>logs/error/unza-counseling-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>200MB</maxFileSize>
                <maxHistory>90</maxHistory>
                <totalSizeCap>10GB</totalSizeCap>
            </rollingPolicy>
        </appender>
    </springProfile>

    <!-- Audit Logger Configuration -->
    <logger name="AUDIT_LOGGER" level="INFO" additivity="false">
        <springProfile name="production">
            <appender-ref ref="AUDIT_FILE"/>
        </springProfile>
        <springProfile name="development">
            <appender-ref ref="FILE"/>
        </springProfile>
    </logger>

    <!-- Security Logger Configuration -->
    <logger name="SECURITY_LOGGER" level="WARN" additivity="false">
        <springProfile name="production">
            <appender-ref ref="SECURITY_FILE"/>
        </springProfile>
        <springProfile name="development">
            <appender-ref ref="FILE"/>
        </springProfile>
    </logger>

    <!-- Error Logger Configuration -->
    <logger name="ERROR_LOGGER" level="ERROR" additivity="false">
        <springProfile name="production">
            <appender-ref ref="ERROR_FILE"/>
        </springProfile>
        <springProfile name="development">
            <appender-ref ref="FILE"/>
        </springProfile>
    </logger>

    <!-- Application Specific Loggers -->
    <logger name="zm.unza.counseling" level="${LOG_LEVEL_APP:INFO}"/>
    <logger name="org.springframework.web" level="${LOG_LEVEL_SPRING_WEB:INFO}"/>
    <logger name="org.springframework.security" level="${LOG_LEVEL_SPRING_SECURITY:WARN}"/>
    <logger name="org.hibernate.SQL" level="${LOG_LEVEL_SQL:WARN}"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="${LOG_LEVEL_SQL_PARAM:WARN}"/>
    <logger name="org.springframework.cache" level="${LOG_LEVEL_CACHE:WARN}"/>
    <logger name="org.springframework.amqp" level="${LOG_LEVEL_AMQP:INFO}"/>
    <logger name="org.springframework.data.elasticsearch" level="${LOG_LEVEL_ELASTICSEARCH:WARN}"/>
    
    <!-- External Dependencies -->
    <logger name="com.amazonaws" level="WARN"/>
    <logger name="io.lettuce" level="WARN"/>
    <logger name="org.quartz" level="INFO"/>
    <logger name="org.elasticsearch" level="WARN"/>

    <!-- Root Logger -->
    <springProfile name="development">
        <root level="${LOG_LEVEL_ROOT:DEBUG}">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
    
    <springProfile name="production">
        <root level="${LOG_LEVEL_ROOT:INFO}">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- JMX Configuration for external monitoring -->
    <jmxConfigurator/>

    <!-- Improved shutdown hook configuration with proper buffer flushing -->
    <shutdownHook class="ch.qos.logback.core.hook.DefaultShutdownHook">
        <delay>1000</delay>
    </shutdownHook>

</configuration>